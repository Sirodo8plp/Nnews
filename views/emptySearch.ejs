<%- include("header") -%>

<div class="main-content">
    <main class="article-container">

        <div class="article-container__hotline">
            <div class="article-container__hotline-image-container">
                <img src="/img/noarticles.webp" alt="No articles found from search" class="article-container__hotline-image">
            </div>
            <div class="article-container__hotline-details">
                <h1 class="article-container__hotline-title">There were no articles found for this topic.</h1>
                <p class="article-container__hotline-summary">
                    Please, try searching for another topic.
                </p>
                <a href="/" class="button button--article">Back to the homepage</a>
            </div>
        </div>

    </main>
    <section class="breaking-news">
        <h2 class="breaking-news__title">Breaking News</h2>

        <%for(let i =0; i< breaking_news.length; i++){ %>
        <div class="breaking-news__box">
            <h1 class="breaking-news__sub-title"><%=breaking_news[i].title%></h1>
            <blockquote class="breaking-news__summary">
                <%=breaking_news[i].abstract %>
                <button class="breaking-news__summary-button" onclick="location.href = '<%=breaking_news[i].url%>'">Read
                    More
                    &rarr;</button>
            </blockquote>
            <div class="breaking-news__creator">
                <img src="/img/breakingNews.png" alt="NYT Logo" class="breaking-news__creator-image">
                <h1 class="breaking-news__creator-name"><%=breaking_news[i].byline%></h1>
                <h2 class="breaking-news__date"><%=breaking_news[i].published_date%></h2>
            </div>
        </div>
        <%}%>
        <div class="breaking-news__copyright">
            <p>&copy;2021 Athens,Greece.All rights reserved.</p>
        </div>
    </section>
</div>

<%- include("footer") -%>